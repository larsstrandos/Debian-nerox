########################################################
################ MODES 	################
########################################################

mode "gaming" {
	bindsym $mod2+F1 exec amixer -q set Master toggle
	bindsym $mod2+F2 exec amixer -q set Master 2dB- unmute
	bindsym $mod2+F3 exec amixer -q set Master 2dB+ unmute
	bindsym $mod+Shift+q kill

	bindsym $mod+g mode "default"
}

set $mode_system System (l) lock,o	 (e) logout, (s) suspend, (h) hibernate, (r) reboot, (Shift+s) shutdown
mode "$mode_system" {
  bindsym l exec --no-startup-id sudo /home/luye/i3exit lock, mode "default"
  bindsym e exec --no-startup-id sudo /home/luye/i3exit logout, mode "default"
  bindsym s exec --no-startup-id sudo /home/luye/i3exit suspend, mode "default"
  bindsym h exec --no-startup-id sudo /home/luye/i3exit hibernate, mode "default"
  bindsym r exec --no-startup-id sudo /home/luye/i3exit reboot, mode "default"
  bindsym Shift+s exec --no-startup-id sudo /home/luye/i3exit shutdown, mode "default"

  # back to normal: Enter or Escape
  bindsym Return mode "default"
  bindsym Escape mode "default"
}


bindsym $mod2+F11 mode "$mode_system"
bindsym $mod+g mode "gaming"

